        <Canvas Margin="5" Width="300" Height="300" Name="ChessBoard" MouseDown="ChessBoard_MouseDown">
            <Border Background="LightBlue"  Width="{Binding ElementName=ChessBoard,Path=Width}" Height="{Binding ElementName=ChessBoard,Path=Height}"></Border>
